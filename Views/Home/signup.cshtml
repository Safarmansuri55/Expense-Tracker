@model Expanse_Manager.Models.user
@{
    ViewBag.Title = "signup";
    Layout = null;
}

@*<h2>signup</h2>*@
<link href="~/css/forms.css" rel="stylesheet" />
@using (Html.BeginForm("Addsignup", "Home", FormMethod.Post))   
{
<div class="form">
    <form action="#" method="post">
        <h2>Register</h2>
        <div class="form-group">
            <div class="row">
                <div class="col">

                    @* @Html.TextBoxFor(x => x.username, new { @class = "form-control"})*@
                    <input type="text" class="form-control" name="username" placeholder="First Name" required="required">
                </div>

            </div>
        </div>
        <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Email" required="required">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" required="required">
        </div>
        @* <div class="form-group">
                <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" required="required">
            </div>*@
        <div class="form-group">
            <label class="form-check-label"><input type="checkbox" required="required"> I accept the <a href="#">Terms of Use</a> &amp; <a href="#">Privacy Policy</a></label>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-lg btn-block">Register Now</button>
        </div>
    </form>

  @*  <div class="text-center">Already have an account? <a href="login.html">Sign in</a></div>*@
    @Html.ActionLink(" Already have an account", "login", "Home", new { @class = "text-center" })
</div>
}

